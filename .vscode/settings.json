{
  "files.exclude": {
    "**/__pycache__": true,
    "**/.mypy_cache": true,
    "**/.pytest_cache": true,
    "**/.ruff_cache/": true,
    "**/.venv": true,
    "**/htmlcov": true,
    "**/.coverage": true,
  },
  /* Python */
  "python.analysis.autoImportCompletions": true,
  "python.testing.pytestEnabled": true,
  /* Ruff */
  "ruff.enable": true,
  "ruff.importStrategy": "fromEnvironment",
  "ruff.lint.run": "onType",
  "ruff.fixAll": true,
  /* Mypy */
  "mypy-type-checker.importStrategy": "fromEnvironment",
}
